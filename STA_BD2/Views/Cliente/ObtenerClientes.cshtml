@model List<STA_BD2.Models.Cliente>

@{
    ViewData["Title"] = "Obtener Clientes";
}

<div class="container">
	<table class="table table-striped table-bordered">
	</table>
</div>
<div class="text-align">
    <div class="float-right">
        <div>
            <h1>Lista de Clientes</h1>
            <a class="btn btn-dark" asp-area="" asp-controller="Cliente" asp-action="AgregarCliente">Agregar Cliente</a>
            <a class="btn btn-dark" asp-area="" asp-controller="ClienteContrato" asp-action="ObtenerContratos">Ver Contratos</a>
        </div>
    </div>
    <br>
</div>
<div class="center text-center">
	<table class="table table-striped table-bordered">
		<thead>
            <tr>
                <th>Cliente ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Número</th>
                <th>Correo</th>
                <th>Dirección</th>
                <th>Opciones</th>
            </tr>
		</thead>
		<tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.ClienteId</td>
                    <td>@cliente.PrimerNombre @cliente.SegundoNombre</td>
                    <td>@cliente.PrimerApellido @cliente.SegundoApellido</td>
                    <td>@cliente.Numero</td>
                    <td>@cliente.Correo</td>
                    <td>@cliente.Direccion</td>
                    <th>
                        <div class="btn-group" role="group" aria-label="Acciones">
                            <a class="btn btn-secondary mr-2" asp-controller="Cliente" asp-action="EditarCliente" asp-route-id="@cliente.ClienteId">Editar</a>
                            <form method="post" asp-action="EliminarCliente" asp-route-id="@cliente.ClienteId">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </th>
                </tr>
            }
		</tbody>
	</table>
</div>

